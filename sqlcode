DROP TABLE movies;
DROP TABLE friends;
DROP TABLE review;

CREATE TABLE movies
(
    movie_id    serial primary key,
    movie_name        VARCHAR(100) not null
);

CREATE TABLE friends
(
    friends_id    serial primary key,
    friends_name        VARCHAR(100) not null
);

CREATE TABLE review
(
    movie_id int not null,
	friends_id int not null,
	ranking int
);

